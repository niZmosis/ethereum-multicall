{
  "name": "@ethereum-multicall/contracts",
  "version": "1.0.0",
  "author": "niZmosis",
  "license": "ISC",
  "keywords": [
    "ethereum",
    "blockchain",
    "JSONRPC",
    "multicall",
    "ethereum-multicall",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/niZmosis/ethereum-multicall/issues"
  },
  "homepage": "https://github.com/niZmosis/ethereum-multicall#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "dist/esm/index.js",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js"
  },
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "pnpm build:esm && pnpm build:cjs",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "start": "tsc -p tsconfig.esm.json --watch"
  },
  "dependencies": {
    "@ethereum-multicall/utils": "workspace:*",
    "@ethereum-multicall/provider": "workspace:*"
  },
  "devDependencies": {
    "@ethereum-multicall/types": "workspace:*",
    "ethers": "5.7.2"
  }
}
